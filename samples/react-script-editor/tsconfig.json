        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@microsoft"
