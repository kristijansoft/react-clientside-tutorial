{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "types": [
      "es6-promise",
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@microsoft"
    ],
    "lib": [
      "es5",
      "dom",
      "es2015.collection"
    ]
  }
}
